<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">
  <div class="pull-left">
    <div class="form-group">
      <label for="name" class="col-xs-2 control-label">名前:</label>
        <div class="col-xs-6">
        <%= f.text_field :name, :class => "form-control", :size => "20x1" %>
        <span class="help-block">名前を入力してください。</span>
        </div>
    </div>
    <div class="form-group">
      <label for="body" class="col-xs-2 control-label">内容:</label>
        <div class="col-xs-10">
        <%= f.text_area :body, :class => "form-control", :size => "40x5" %>
        <span class="help-block">投稿内容を入力してください。</span>
        </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
<% end %>